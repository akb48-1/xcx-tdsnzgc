<view class="modal" wx:if="{{show}}">
    <view class="modal-mask" bindtap="cancel"></view>
    <view class="modal-content">
        <view class="modal-cust">
            <view class="modal-title" wx:if="{{title}}">{{title}}</view>
            <scroll-view scroll-y class="main-content">
                <slot name="content"></slot>
            </scroll-view>
        </view>
        <view class="modal-btn-wrapper">
            <view class="cancel-btn" bindtap="selfCancel">取消</view>
            <view class="{{loading? 'cancel-btn': 'confirm-btn'}}" bindtap="selfConfirm">确定</view>
        </view>
        <slot name="footer"></slot>
    </view>
</view>